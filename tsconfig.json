{
  "include": ["src"],
  "exclude": ["src/tree"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ES2022"
    ],
    "outDir": "build",
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}