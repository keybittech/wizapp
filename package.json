{
  "name": "@keybittech/wizapp",
  "version": "0.1.22-beta",
  "description": "The Wizard's Apprentice",
  "keywords": [
    "automated",
    "ai",
    "api",
    "assistant",
    "typescript",
    "development",
    "editing",
    "projects"
  ],
  "homepage": "https://github.com/keybittech/wizapp",
  "license": "MIT",
  "author": "Joe McCormick",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "wizapp": "./cli/cli.cjs"
  },
  "files": [
    "build",
    "cli",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.cli.json && node renameCjs.cjs",
    "test": "jest",
    "debug": "--inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "update-version": "npm version --no-git-tag-version $new_version && git add package.json && git commit -m \"Update to version $new_version\"",
    "publish-package": "npm publish --access public",
    "update-and-publish": "npm run update-version && npm run publish-package"
  },
  "dependencies": {
    "@babel/parser": "^7.21.4",
    "abstract-syntax-tree": "^2.20.6",
    "fast-glob": "^3.2.12",
    "openai": "3.2.1",
    "simple-git": "3.17.0",
    "ts-morph": "18.0.0",
    "yargs": "17.7.1"
  },
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@types/node": "16.18.0",
    "@types/yargs": "17.0.24",
    "jest": "29.5.0",
    "jest-environment-node": "^29.5.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.0.0",
    "ts-node": "^10.9.1",
    "tspath": "^2.6.8",
    "typescript": "5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keybittech/wizapp.git"
  },
  "bugs": {
    "url": "https://github.com/keybittech/wizapp/issues"
  }
}
