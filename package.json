{
  "name": "@keybittech/wizapp",
  "version": "0.1.23-beta",
  "description": "The Wizard's Apprentice",
  "keywords": [
    "automated",
    "ai",
    "api",
    "assistant",
    "typescript",
    "development",
    "editing",
    "projects"
  ],
  "homepage": "https://github.com/keybittech/wizapp",
  "license": "MIT",
  "author": "Joe McCormick",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "wizapp": "./dist/cli.cjs"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "oldbuild": "tsc -p tsconfig.json && tsc -p tsconfig.cli.json",
    "postinstall": "npm run build",
    "build": "node node_modules/tsup/dist/cli-default.js --format esm,cjs src/index.ts src/cli.ts && tsc -p tsconfig.json",
    "wizapp": "ts-node ./src/cli.ts",
    "test": "jest",
    "debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "update-version": "npm version --no-git-tag-version $new_version && git add package.json && git commit -m \"Update to version $new_version\"",
    "publish-package": "npm publish --access public",
    "update-and-publish": "npm run update-version && npm run publish-package"
  },
  "dependencies": {
    "@babel/parser": "^7.21.4",
    "abstract-syntax-tree": "^2.20.6",
    "fast-glob": "^3.2.12",
    "openai": "3.2.1",
    "simple-git": "3.17.0",
    "ts-morph": "18.0.0",
    "yargs": "17.7.1"
  },
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/yargs": "17.0.24",
    "jest": "29.5.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.0.0",
    "tsup": "^6.7.0",
    "typescript": "4.9.5"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keybittech/wizapp.git"
  },
  "bugs": {
    "url": "https://github.com/keybittech/wizapp/issues"
  }
}
