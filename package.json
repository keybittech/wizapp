{
  "name": "@keybittech/wizapp",
  "version": "0.0.3-alpha",
  "description": "The Wizard's Apprentice",
  "keywords": [
    "automated",
    "ai",
    "api",
    "assistant",
    "typescript",
    "development",
    "editing",
    "projects"
  ],
  "homepage": "https://awayto.dev",
  "license": "MIT",
  "author": "Joe McCormick",
  "main": "./bin/src/cli.js",
  "bin": {
    "wizapp": "./bin/src/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "wizapp": "ts-node ./src/cli.ts",
    "test": "jest",
    "debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "update-version": "npm version --no-git-tag-version $new_version && git add package.json && git commit -m 'Update to version $new_version'",
    "publish": "npm publish --access public",
    "update-and-publish": "npm run update-version && npm run publish"
  },
  "dependencies": {
    "openai": "^3.2.1",
    "simple-git": "^3.17.0",
    "ts-morph": "^18.0.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/yargs": "^17.0.24",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.0.0",
    "typescript": "^4.0.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keybittech/wizapp.git"
  },
  "bugs": {
    "url": "https://github.com/keybittech/wizapp/issues"
  }
}
